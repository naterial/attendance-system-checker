rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read and create access for attendance records.
    // This allows the homepage to display the log and users to sign in.
    match /attendanceRecords/{recordId} {
      allow read, create: if true;
    }

    // Secure all other collections by default.
    // This prevents unauthorized access to worker data and configuration.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}