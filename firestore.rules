rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the workers collection
    match /workers/{workerId} {
      // Allow full create, read, update, and delete access for workers.
      // This allows the admin to manage the worker list.
      allow read, write: if true;
    }

    // Rules for the attendanceRecords collection
    match /attendanceRecords/{recordId} {
      allow read, create, update: if true;
      
      // Prevent deletion of attendance records to maintain a log.
      allow delete: if false;
    }
  }
}
